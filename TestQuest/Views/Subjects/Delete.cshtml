@model TestQuest.Models.Subject

@{
    ViewData["Title"] = "Видалення предмету";
}

<h1>Видалити</h1>
<h3>Ви дійсно збераєтесь видалити предмет ?</h3>
<div>
    <h4>@Html.DisplayFor(model => model.Title)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="Index">Повернутися до списку предметів</a>
    </form>
</div>
